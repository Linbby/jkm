/* pages/code/code.wxss */
.bg{
  background-color: rgba(71, 111, 222, 1);
  /* height: 100vh; */
  min-height: 100vh;
  padding: 12px;
  padding-bottom: 24px;
}
.card{
  background-color: #fff;
  /* height: calc(100vh - 30px); */
  border-radius: 20px;
  overflow: hidden;
}
.tittle{
  background-color: #F5F5F5;
  height: 55px;
  line-height: 55px;
  padding: 0 30px;
}
.tittle text{
  /** 文本1 */
  font-size: 20px;
  font-weight: 400;
  letter-spacing: 0px;
  color: rgba(51, 51, 51, 1);
}
.jkcode.yellow{
  background-color: #FFD700;
}
.jkcode.red{
  background-color: #f60909;
}
.jkcode.green{
  background-color: #1b824d;
}
.qrcode{
  width: 212px;
  height: 212px;
  z-index: 333;
  background-color: #fff;
}
.jkcode{
  width: 225px;
  height: 225px;

  margin:0 auto;
  margin-top: 24px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.jkcode .code{
  width: 212px;
  height: 212px;
  vertical-align: top;
}

.jkcode .refresh{
  width: 16px;
  height: 16px;
  vertical-align: center;
  position: absolute;
  right: -24px;
  bottom: 0px;
}
.icons{
  display:flex;
  flex-wrap: wrap;
  justify-content: center;
  padding-bottom: 20px;
}
.nav{
  align-items: center;
  text-align: center;
  width: 30%;
}
.nav .imgbg{
  background-color: #C7E4FE;
  width:67px;
  height:67px;
  border-radius: 50%;
  margin: 5px auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav .imgbg image{
  width: 42px;
  height: 42px;
}
.nav text{
  /** 文本1 */
font-size: 14px;
font-weight: 400;
letter-spacing: 0px;
line-height: 19.21px;
text-align: center;
vertical-align: top;
}

.module{
  border-radius: 5px;
  background: #FFFFFF;
  margin: 24px;
  box-shadow:0px 8px 24px rgba(149,157,165,0.2);
  padding: 12px 27px;
  position: relative;
}
.module-tittle{
  /** 文本1 */
font-size: 16px;
font-weight: 400;
letter-spacing: 0px;
line-height: 32px;
/* margin: 12px 0; */
vertical-align: top;
color: rgba(51, 51, 51, 1);
}
.module-content{
  /** 文本1 */
font-size: 13px;
font-weight: 400;
letter-spacing: 0px;
line-height: 18px;
color: rgba(99, 99, 99, 1);
}

.module .info{
  right: 10px;
  bottom: 10px;
  height: 17px;
  /** 文本1 */
  font-size: 12px;
  font-weight: 400;
  letter-spacing: 0px;
  line-height: 16.46px;
  color: rgba(84, 179, 122, 1);
  text-align: left;
  vertical-align: top;
  position: absolute;
}